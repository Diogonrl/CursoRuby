<% if obj.errors.any? %>
  <div class="row">
    <div class="col-md-6 offset-md-3 center">
      <div class="card text-white bg-danger mb-3">
        <div class="card-heading">
            <%= pluralize(obj.errors.count, "error") %>
            <%= obj.class %>:
            <div class="card-body">
                <ul>
                    <% obj.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>  
      </div>
    </div>
  </div>
<% end %>